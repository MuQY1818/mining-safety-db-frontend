# 矿区安全数据库前端 - Docker环境变量配置
# 专门用于Docker容器部署的环境变量

# ================================
# 应用基础配置
# ================================
REACT_APP_API_BASE_URL=https://mining-backend.ziven.site/api
# AI服务API密钥 - 必须配置才能使用AI对话功能
# 获取地址: https://siliconflow.cn/account/ak
REACT_APP_SILICONFLOW_API_KEY=your_docker_api_key_here
NODE_ENV=production

# ================================
# Docker服务配置
# ================================
FRONTEND_PORT=3000
REDIS_PORT=6379
PROXY_PORT=80
PROXY_HTTPS_PORT=443

# ================================
# 生产优化配置
# ================================
API_TIMEOUT=10000
MAX_FILE_SIZE=10485760
CACHE_TIME=5

# ================================
# 安全配置
# ================================
ALLOWED_ORIGINS=*
FORCE_HTTPS=false
SECURE_COOKIES=false

# ================================
# 特性开关
# ================================
REACT_APP_ENABLE_AI_CHAT=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_FEEDBACK=true
REACT_APP_ENABLE_DARK_MODE=false

# ================================
# 日志与监控
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
HEALTH_CHECK_PATH=/health